generator client {
    provider = "prisma-client-js"
}

datasource db {
    // FOR DEV MODE
    // provider = "sqlite"
    // url      = ""

    // FOR PROD MODE
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model Lawyer {
    id          String  @id @default(cuid())
    slug        String  @unique
    order       Int // order position in Lawyers page, caroucel, etc..
    name        String
    imageUrl    String
    linkedInUrl String?
    email       String?

    @@map("lawyers")
}

model Translation {
    id         Int    @id @default(autoincrement())
    language   String // 'en' or 'id', etc.
    key        String // 'position', 'degree', 'bio', 'description', etc.
    value      String // The translated text
    entityId   String // Could be the ID of any model needing translation
    entityType String // Specifies the type, e.g., 'Lawyer' or 'Blog'

    @@unique([entityId, entityType, language, key]) // ensures each combination of entityId, entittyType, language, and key in the Translation model is unique.
    @@map("translations")
}

model PracticeArea {
    id       String @id @default(cuid())
    slug     String @unique
    imageUrl String
    order    Int // order position in practice-areas page, caroucel, etc..

    @@map("practice_areas")
}

model Member {
    id       String  @id @default(cuid())
    name     String
    imageUrl String?
    // slug     String   @unique
    // bio      String?
    // position String
    // joinedAt DateTime

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    @@map("members")
}

model Blog {
    id               String @id @default(cuid())
    title            String
    contentIndonesia String
    contentEnglish   String

    createdAt DateTime @default(now())

    @@map("blogs")
}
